<div class="row justify-content-center">
    <div class="col-md-12 justify-content-center">
        <img src="https://pbs.twimg.com/media/CO-LcZOXAAErZty.jpg" alt="burger king">
        <h1>Eat Da Burger</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.name}}
                {{#unless devoured}}
                <button class="toDevoured" data-id="{{this.id}}"
                    data-freshlyDevoured="{{this.devoured}}">Devour</button>
                {{/unless}}
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h1>Devoured</h1>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.name}}
                {{!-- {{#unless devoured}} --}}
                <button class="toDevoured" data-id="{{this.id}}"
                    data-newdevoured="{{this.devoured}}">Devour</button>
                {{!-- {{/unless}} --}}
                </button>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>


<form>
    <div class="form-group">
        <label for="inputBurgerName">Enter a burger to be eaten</label>
        <input type="text" class="form-control" id="inputBurgerName" aria-describedby="burgerHelp"
            placeholder="Enter a burger">
    </div>
    <button class="btn btn-primary" id="submitBurger">Submit</button>
</form>
